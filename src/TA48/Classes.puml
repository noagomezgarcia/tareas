@startuml
'https://plantuml.com/class-diagram

class Usuari {
    - String DNI
    - String Nom
    - String Email
    - String Password
    - String Adreça
    + login()
    + modificarDades()
    + cercarCataleg()
}

class UsuariRegistrat {
    + ferReserva()
    + recollirPrestec()
    + renovarPrestec()
    + veureHistoric()
    + comentarDocument()
}

class Bibliotecari {
    + altaDocument()
    + modificarDocument()
    + altaAutor()
    + modificarAutor()
    + gestionarNoticies()
}

class Administrador {
    + bloquejarUsuari()
    + modificarTipusUsuari()
    + baixaDocument()
    + baixaAutor()
}

class Document {
    - String titol
    - String materia
    - List paraulesClau
    - Boolean visible
    - Boolean disponible
    + veureFitxa()
}

class Llibre {
    - String ISBN
    - String idioma
}

class CD {
}

class DVD {
}

class Autor {
    - String nom
    - String nif
    - Boolean visible
}

class Prestec {
    - Date dataInici
    - Date dataFi
    - String estat
}

class Reserva {
    - Date dataReserva
    - String estat
    + notificarUsuari()
}

class LlistaFavorits {
    - String nomLlista
    + afegirDocument()
    + eliminarDocument()
}

class Comentari {
    - String text
    - int valoracio
    - Date data
}

class Noticia {
    - String titol
    - String contingut
    - Date dataPublicacio
}

' Relaciones y Herencia

Usuari <|-- UsuariRegistrat
UsuariRegistrat <|-- Bibliotecari
Bibliotecari <|-- Administrador

Document <|-- Llibre
Document <|-- CD
Document <|-- DVD

' Asociaciones

UsuariRegistrat "1" -- "*" Prestec : realitza >
Prestec "*" -- "1" Document : correspon a >

UsuariRegistrat "1" -- "*" Reserva : fa >
Reserva "*" -- "1" Document : sobre >

UsuariRegistrat "1" -- "*" LlistaFavorits : té >
LlistaFavorits "*" -- "*" Document : conté >

UsuariRegistrat "1" -- "*" Comentari : escriu >
Comentari "*" -- "1" Document : referencia >

Document "*" -- "1..*" Autor : escrit per >

Bibliotecari ..> Noticia : gestiona >
Bibliotecari ..> Document : gestiona >
Bibliotecari ..> Autor : gestiona >

@enduml